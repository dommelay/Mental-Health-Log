<body>
    <div class="container">
        <div class="row">
            <div class="col-8">
                <h1 class="display-3"><%=log.date%></h1>
            </div>
            <div id="shownav" class="createbttnhome1 col-4">
                <form action="/log/<%=log._id%>/edit">
                    <input type="submit" value="edit">
                </form>
                <form id="delete" action="/log/<%=log.id%>?_method=DELETE" method="POST">
